<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manne.mymovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/movies_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainDrawerActivity"
            android:label="@string/explorer"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.MovieDetailsActivity"
            android:label="@string/movie_details"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.ExploreActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.FavouritesActivity"
            android:label="@string/favourites"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.RatedActivity"
            android:label="@string/rated"/>
        <activity android:name=".Activities.WatchlistActivity"
            android:label="@string/watchlist"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.PeopleActivity"
            android:label="@string/people"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.PeopleDetailsActivity"
            android:label="@string/people"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.FullCastActivity"
                android:label="@string/movie_details"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>